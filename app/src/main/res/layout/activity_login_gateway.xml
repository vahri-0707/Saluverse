<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginGateway">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="450sp"
        android:layout_height="370sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ill_login_gateway" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/shape_circle_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/shape_circle_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="Sign in with Email"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/whiteback"

        app:icon="@drawable/ic_mail"
        app:iconGravity="textStart"
        app:iconPadding="16sp"
        app:iconSize="20sp"
        app:iconTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:strokeColor="@color/gray" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:backgroundTint="@color/whiteback"
        android:text="Sign in with Google"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconPadding="15sp"
        app:iconSize="20sp"
        app:iconTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialButton"
        app:strokeColor="@color/gray" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="Sign in with Facebook"
        android:backgroundTint="@color/whiteback"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_facebook"
        app:iconGravity="textStart"
        app:iconPadding="7sp"
        app:iconSize="28sp"
        app:iconTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialButton2"
        app:strokeColor="@color/gray" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/lato_bold"
        android:text="Don't have an account?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="8dp"
        android:text="Sign up"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15" />

</androidx.constraintlayout.widget.ConstraintLayout>